#!/usr/bin/screen -c

source screenrc.common

screen -t core
stuff "roscore"

screen -t sim
stuff "roslaunch roman_simulation robot_simulator.launch --screen"

screen -t move
stuff "roslaunch roman_moveit_config move_group.launch --screen"

screen -t grasp
stuff "roslaunch grasping_executive grasp_object_executor.launch --screen"

screen -t repo
stuff "roslaunch roman_manipulation reposition_base_executor.launch --screen"

screen -t obm
stuff "roslaunch object_manipulation_planner simple_crate_planner.launch --screen"

screen -t manip
stuff "roslaunch ../../object_manipulation_planner/launch/manipulate_object.launch"

screen -t rviz
stuff "LD_LIBRARY_PATH=/usr/local/nvidia/lib:/usr/local/nvidia/lib64:$LD_LIBRARY_PATH;rosrun rviz rviz -d $HOME/.rviz/rcta.rviz"
