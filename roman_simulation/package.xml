<?xml version="1.0"?>
<package format="2">
    <name>roman_simulation</name>
    <version>0.0.0</version>
    <description>The roman_simulation package</description>
    <maintainer email="andrew.dornbush@gmail.com">Andrew Dornbush</maintainer>
    <author email="andrew.dornbush@gmail.com">Andrew Dornbush</author>
    <license>BSD</license>

    <buildtool_depend>catkin</buildtool_depend>

    <exec_depend>gazebo_ros</exec_depend>

    <depend>actionlib</depend>
    <depend>eigen_conversions</depend>
    <depend>libglew-dev</depend>
    <depend>nav_msgs</depend>
    <depend>opengl</depend>
    <depend>rosbag</depend>
    <depend>roscpp</depend>
    <depend>rospack</depend>
    <depend>sdl2</depend>
    <depend>smpl</depend>
    <depend>smpl_urdf_robot_model</depend>
    <depend>spellbook</depend>
    <depend>tf</depend>
    <depend>tf_conversions</depend>

    <exec_depend>ros_controllers</exec_depend>

    <export>
        <gazebo_ros gazebo_media_path="${prefix}/models"/>
        <gazebo_ros gazebo_model_path="${prefix}/models"/>
    </export>
</package>
