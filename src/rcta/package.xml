<?xml version="1.0"?>
<package format="2">
    <name>rcta</name>
    <version>0.0.0</version>
    <description>The HDT package</description>
    <maintainer email="andrew.dornbush@gmail.com">Andrew Dornbush</maintainer>
    <author email="andrew.dornbush@gmail.com">Andrew Dornbush</author>
    <license>TODO</license>

    <buildtool_depend>catkin</buildtool_depend>

    <build_depend>cmake_modules</build_depend>
    <build_depend>message_generation</build_depend>

    <exec_depend>message_runtime</exec_depend>
    <exec_depend>xacro</exec_depend>
    <exec_depend>gazebo_ros</exec_depend>

    <depend>actionlib</depend>
    <depend>actionlib_msgs</depend>
    <depend>ar_track_alvar</depend>
    <depend>ar_track_alvar_msgs</depend>
    <depend>control_msgs</depend>
    <depend>eigen_conversions</depend>
    <depend>geometric_shapes</depend>
    <depend>geometry_msgs</depend>
    <depend>hdt_msgs</depend>
    <depend>interactive_markers</depend>
    <depend>leatherman</depend>
    <depend>libblas-dev</depend>
    <depend>libglew-dev</depend>
    <depend>libhdt</depend>
    <depend>liblapack-dev</depend>
    <depend>libncurses-dev</depend>
    <depend>libopenni-dev</depend>
    <depend>libsbpl</depend>
    <depend>liburdfdom-dev</depend>
    <depend>lua5.2</depend>
    <depend>moveit_core</depend>
    <depend>moveit_planners_sbpl</depend>
    <depend>moveit_ros_move_group</depend>
    <depend>moveit_ros_planning</depend>
    <depend>moveit_ros_planning_interface</depend>
    <depend>nav_msgs</depend>
    <depend>ntcansckplugin</depend>
    <depend>octomap_msgs</depend>
    <depend>pkg-config</depend>
    <depend>pluginlib</depend>
    <depend>rosbag</depend>
    <depend>roscpp</depend>
    <depend>rospack</depend>
    <depend>rviz</depend>
    <depend>sbpl_arm_planner</depend>
    <depend>sbpl_collision_checking</depend>
    <depend>sbpl_geometry_utils</depend>
    <depend>sdl2</depend>
    <depend>sensor_msgs</depend>
    <depend>std_msgs</depend>
    <depend>tf</depend>
    <depend>trajectory_msgs</depend>
    <depend>urdf</depend>
    <depend>visualization_msgs</depend>

    <export>
        <gazebo_ros gazebo_media_path="${prefix}/models"/>
        <gazebo_ros gazebo_model_path="${prefix}/models"/>
        <rviz plugin="${prefix}/config/pluginlib/plugin_description.xml"/>
        <rviz plugin="${prefix}/config/pluginlib/hdt_command_plugin_description.xml"/>
        <rviz plugin="${prefix}/config/pluginlib/controller_status_panel_plugin_description.xml"/>
        <rviz plugin="${prefix}/config/pluginlib/pick_and_place_plugin_description.xml"/>
        <rviz plugin="${prefix}/config/pluginlib/temperature_status_plugin_description.xml"/>
        <rviz plugin="${prefix}/config/pluginlib/move_group_command_panel_plugin_description.xml"/>
    </export>
</package>
