<launch>
    <arg name="sim"/>
    <arg name="kinect_sensor"/>

    <!-- Upload correct URDF -->
    <group if="$(arg sim)">
        <group if="$(arg kinect_sensor)">
            <param name="robot_description" command="$(find xacro)/xacro.py '$(find rcta)/config/urdf/andalite_with_kinect.xacro'"/>
        </group>
        <group unless="$(arg kinect_sensor)">
            <!-- TODO: describe xtion camera in sim mode -->
            <param name="robot_description" command="$(find xacro)/xacro.py '$(find rcta)/config/urdf/andalite_with_asus.xacro'"/>
        </group>
    </group>

    <group unless="$(arg sim)">
        <group if="$(arg kinect_sensor)">
            <param name="robot_description" command="$(find xacro)/xacro.py '$(find rcta)/config/urdf/andalite_no_kinect.xacro'"/>
        </group>
        <group unless="$(arg kinect_sensor)">
            <param name="robot_description" command="$(find xacro)/xacro.py '$(find rcta)/config/urdf/andalite_no_asus.xacro'"/>
        </group>
    </group>

    <!-- Upload SRDF -->
    <param name="robot_description_semantic" textfile="$(find rcta)/config/robots/husky_roboto/moveit/husky_roboto.srdf"/>

    <!-- Upload MoveIt! kinematics plugin parameters -->
    <rosparam command="load" file="$(find rcta)/config/moveit/kinematics.yaml"/>
</launch>
