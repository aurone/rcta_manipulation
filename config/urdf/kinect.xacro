<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
	<!-- Provides:
		one fixed transform for the base of the kinect
			kinect_mount
		one revolute joint for the kinect neck
			kinect_base_link
	-->	

    <include filename="$(find hdt)/config/urdf/common.xacro"/>

    <xacro:property name="min_tilt_angle" value="${-27 * degrees}"/>
    <xacro:property name="max_tilt_angle" value="${ 27 * degrees}"/>

    <xacro:property name="kinect_head_length" value="${2.5 * inches}"/>
    <xacro:property name="kinect_head_width" value="${11 * inches}"/>
    <xacro:property name="kinect_head_height" value="${1.5 * inches}"/>
    <xacro:property name="kinect_base_length" value="${3 * inches}"/>
    <xacro:property name="kinect_base_width" value="${3 * inches}"/>
    <xacro:property name="kinect_base_height" value="${1.5 * inches}"/>

    <xacro:macro name="kinect" params="mounting_link mounting_origin">
        <joint name="kinect_mount" type="fixed">
            <parent link="${mounting_link}"/>
            <child link="kinect_base_link"/>
            <origin xyz="${mounting_origin}" rpy="0 0 0" />
        </joint>

        <link name="kinect_base_link">
            <visual>
                <geometry>
                    <box size="${1.5 * inches} ${1.5 * inches} ${1.0 * inches}"/>
                </geometry>
                <origin xyz="0 0 ${0.5 * inches}" rpy="0 0 0"/>
                <material name="black">
                    <color rgba="0.0 0.0 0.0 1.0"/>
                </material>
            </visual>
        </link>

        <joint name="kinect_tilt" type="revolute">
            <parent link="kinect_base_link"/>
            <child link="kinect_link"/>
            <limit lower="${min_tilt_angle}" upper="${max_tilt_angle}" effort="0.0" velocity="0.0"/>
            <axis xyz="0 0 1"/>
            <origin xyz="0.0 0.0 ${1 * inches}" rpy="${pi / 2} 0.0 0.0"/>
        </joint>

        <link name="kinect_link">
            <visual>
                <geometry>
                    <box size="${kinect_head_length} ${kinect_head_width} ${kinect_head_height}"/>
                </geometry>
                <origin xyz="0 ${1.2 * inches} 0" rpy="${-pi / 2} 0 0"/>
                <material name="black">
                    <color rgba="0.0 0.0 0.0 1.0"/>
                </material>
            </visual>
        </link>
    </xacro:macro>
</robot>
